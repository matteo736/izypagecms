{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./resources/izy/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"],
            "@types/*": ["./resources/types/*"] // Alias per la cartella types
        }
    },
    "include": ["resources/izy/**/*.ts", "resources/izy/**/*.tsx", "resources/izy/**/*.d.ts", "resources/types/*", "resources/types/**/*"]
}
